// Reference: https://code.visualstudio.com/docs/editor/debugging#_launchjson-attributes

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome: Launch",
            "preLaunchTask": "build",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/build/web/index.html"
        },
        {
            "name": "Edge: Launch",
            "preLaunchTask": "build",
            "type": "edge",
            "request": "launch",
            "file": "${workspaceFolder}/build/web/index.html"
        },
        {
            "name": "Firefox: Launch",
            "preLaunchTask": "build",
            "type": "firefox",
            "request": "launch",
            "file": "${workspaceFolder}/build/web/index.html"
        }
    ]
}
