// Reference: https://dotnet.github.io/docfx/tutorial/docfx.exe_user_manual.html#3-docfxjson-format

{
    "build": {
        "dest": "build",
        "content": [
            {
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "exclude": [
                    "LICENSE.md",
                    "README.md"
                ]
            }
        ],
        "globalMetadataFiles": "global.json",
        "markdownEngineName": "markdig",
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "template": [
            "statictoc",
            "theme"
        ]
    }
}
