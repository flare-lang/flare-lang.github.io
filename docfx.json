// Reference: https://dotnet.github.io/docfx/tutorial/docfx.exe_user_manual.html#3-docfxjson-format

{
  "build": {
    "content": [
      {
        "files": [
          "*.md",
          "toc.yml"
        ],
        "exclude": [
          "LICENSE.md",
          "README.md"
        ]
      }
    ],
    "dest": "build",
    "globalMetadataFiles": [
      "global.json"
    ],
    "markdownEngineName": "markdig",
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "template": [
      "statictoc",
      "theme"
    ]
  }
}
